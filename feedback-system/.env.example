# Feedback System Configuration
# Copy this file to .env and configure your settings

# ==================== Database ====================
DATABASE_PATH=../database/feedback.db

# ==================== Server ====================
# Set to 0.0.0.0 to listen on all interfaces (required for clearnet/i2p/tor)
HOST=0.0.0.0
PORT=5000
DEBUG=False

# ==================== CORS ====================
# Comma-separated list of allowed origins
# Use * for development, specify domains in production
CORS_ORIGINS=*

# ==================== Admin Panel ====================
# Set to False to allow remote admin access (not recommended)
ADMIN_ONLY_LOCALHOST=True

# ==================== Rate Limiting ====================
RATE_LIMIT_ENABLED=True
RATE_LIMIT_STORAGE=memory

# Rate limits (requests per hour per IP)
RATE_LIMIT_FEEDBACK=10
RATE_LIMIT_VOTE=20
RATE_LIMIT_FEATURE_SUBMIT=5
RATE_LIMIT_FEATURE_UPVOTE=50

# ==================== Email (SMTP) ====================
# Enable email notifications for thumbs down
SMTP_ENABLED=False
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-password
SMTP_USE_TLS=True
SMTP_FROM=noreply@example.com
SMTP_TO=admin@example.com

# ==================== Security ====================
# Generate a strong secret key (use: python -c "import os; print(os.urandom(24).hex())")
SECRET_KEY=your-secret-key-here
SESSION_COOKIE_SECURE=False
# Set SESSION_COOKIE_SECURE=True if using HTTPS

# ==================== Network URLs (for documentation) ====================
# These are used for widget embedding examples
CLEARNET_URL=http://your-domain.com:5000
I2P_URL=http://your-address.i2p:5000
TOR_URL=http://your-onion-address.onion:5000
